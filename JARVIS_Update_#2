TASKS_FILE = "tasks.txt"

def daily_reminder_check():
    now = datetime.now()
    if now.hour == 9 and now.minute == 0:  # exactly 9:00 AM
        speak("good morning sir, do not forget to take your medication and check your tasks for the day.")



